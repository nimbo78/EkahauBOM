# ==============================================================================
# Ekahau BOM Web - Configuration File
# ==============================================================================
# Copy this file to .env and update the values for your environment
# IMPORTANT: Never commit .env file with real credentials to git!
# ==============================================================================

# ------------------------------------------------------------------------------
# Environment
# ------------------------------------------------------------------------------
# Options: development | production
ENVIRONMENT=development

# ------------------------------------------------------------------------------
# Storage Paths
# ------------------------------------------------------------------------------
PROJECTS_DIR=data/projects
INDEX_FILE=data/index.json

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
API_PREFIX=/api
# Max upload size in bytes (default: 500MB)
MAX_UPLOAD_SIZE=524288000

# ------------------------------------------------------------------------------
# Authentication & Security
# ------------------------------------------------------------------------------
# ⚠️ IMPORTANT: Change these credentials in production!
# Default admin credentials for web UI login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=EkahauAdmin

# JWT Secret Key - MUST be changed in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_ENV_VARIABLE

# JWT token expiration time in minutes (default: 480 = 8 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ------------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# ------------------------------------------------------------------------------
# Allowed origins for API requests
# Development: Allow localhost frontend
CORS_ORIGINS=["http://localhost:4200"]

# Production example (uncomment and modify):
# CORS_ORIGINS=["https://ekahau-bom.yourdomain.com"]

# ------------------------------------------------------------------------------
# Short Links Configuration
# ------------------------------------------------------------------------------
# Length of generated short links (default: 8 characters)
# SHORT_LINK_LENGTH=8

# Short link expiration in days (default: 30 days)
# SHORT_LINK_EXPIRY_DAYS=30
