# EkahauBOM Web Application - Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Frontend Settings
# ===========================================

# Port for the frontend web UI
FRONTEND_PORT=8080

# ===========================================
# Authentication Settings
# ===========================================

# Authentication backend: "simple" or "oauth2"
AUTH_BACKEND=simple

# Simple Auth Credentials (used when AUTH_BACKEND=simple)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# JWT Secret Key (change in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# ===========================================
# OAuth2/OIDC Settings (used when AUTH_BACKEND=oauth2)
# ===========================================

# OAuth2 Issuer URL (e.g., Keycloak realm URL)
OAUTH2_ISSUER=http://localhost:8180/realms/ekahau

# OAuth2 Client ID and Secret
OAUTH2_CLIENT_ID=ekahau-bom-web
OAUTH2_CLIENT_SECRET=your-client-secret

# OAuth2 Redirect URI (must match your client configuration)
OAUTH2_REDIRECT_URI=http://localhost:8080/auth/callback

# Role mapping (IdP roles â†’ app roles)
OAUTH2_ADMIN_ROLE=ekahau-admin
OAUTH2_USER_ROLE=ekahau-user

# ===========================================
# Keycloak Settings (for docker-compose.keycloak.yml)
# ===========================================

# Keycloak admin credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak port
KEYCLOAK_PORT=8180

# ===========================================
# Storage Settings
# ===========================================

# Storage backend: "local" or "s3"
STORAGE_BACKEND=local

# AWS S3 Settings (used when STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=ekahau-bom-data
AWS_REGION=us-east-1
